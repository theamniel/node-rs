{
  "name": "@amniel/node-rs",
  "private": true,
  "packageManager": "yarn@4.4.0",
  "description": "Node & Rust bindings",
  "author": "Amniel",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "artifacts": "yarn workspaces foreach -A run artifacts",
    "build": "yarn workspaces foreach -A run build",
    "build:debug": "yarn workspaces foreach -A run build:debug",
    "prepublishOnly": "yarn workspaces foreach -A run prepublishOnly",
    "version": "yarn workspaces foreach -A run version",
    "test": "ava -s",
    "test:debug": "cross-env NAPI_DEBUG=1 ava -s"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "^20.14.10",
    "ava": "^6.1.3",
    "cross-env": "^7.0.3",
    "jiti": "^1.21.6",
    "typescript": "^5.5.3"
  }
}